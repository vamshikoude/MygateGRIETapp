<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGate.NoActionBar"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyGate.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HOD"
            android:theme="@style/Theme.MyGate.NoActionBar"
            />

        <activity android:name=".Faculty"
            android:theme="@style/Theme.MyGate.NoActionBar"
            />


        <activity android:name=".Student"
            android:theme="@style/Theme.MyGate.NoActionBar"
            />

        <activity android:name=".Faculty_Registration"
            android:theme="@style/Theme.MyGate"
            />

        <activity android:name=".Student_Registration"
            android:theme="@style/Theme.MyGate"
            />


        <activity android:name=".Faculty_RequestsList"
            android:theme="@style/Theme.MyGate"
            />

        <activity android:name=".Student_RequestsList"
            android:theme="@style/Theme.MyGate"
            />

        <activity android:name=".HOD_Dashboard"
            android:theme="@style/Theme.MyGate"
            />
        <activity android:name=".Student_Dashboard"
            android:theme="@style/Theme.MyGate"
            />

        <activity android:name=".StatusRequestsList"
            android:theme="@style/Theme.MyGate"
            />

        <activity android:name=".StatusRequestsList_Faculty"
            android:theme="@style/Theme.MyGate"
            />

        <activity android:name=".GatePass"
            android:theme="@style/Theme.MyGate"/>

        <activity android:name=".StatusRequestsList_HOD"
            android:theme="@style/Theme.MyGate"
            />
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>